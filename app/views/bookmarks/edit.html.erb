<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 post_image_form">
            <div class="section-title-wrapper style-1 v1">
              <h3 class="section-title section-title-sm left">
                <span>Bookmark編集フォーム</span>
              </h3>
            </div>
            <%= form_with model:@bookmark, url: bookmark_path, local: true do |f| %>
              <% if @bookmark.errors.any? %>
                <div id="error_explanation">
                  <h2><%= @bookmark.errors.count %>件のエラーが発生しました。</h2>
                  <ul>
                  <% @bookmark.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <br>
              <div class="row">
                <div class="col-sm-12">
                  <p><%= f.text_area :title, class:"form-control", rows:"3", placeholder:"お気に入りリンクをここに" %></p>
                  <p><%= f.text_field :caption, class:"form-control", rows:"3", placeholder:"#タグ" %></p>
                </div>
              </div>
              <hr>
              <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>