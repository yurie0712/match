<div class="profile-container">
  <%= render 'users/profile', user: @user %>
</div>
<div class="profile-menu">
  <%= link_to user_path(@user) do %><ion-icon name="grid-outline"></ion-icon> 投稿<% end %>　<%= link_to likes_path do %><ion-icon name="heart-outline"></ion-icon> お気に入り<% end %>　<%= link_to bookmarks_path do %><ion-icon name="bookmark-outline"></ion-icon> Bookmark<% end %>
</div>
<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-2">
        <div class="sidemenu">
          <br>
          <% @liketags.each do |liketag| %>
            <br><%= link_to  "##{liketag.tagname}","/like/like_tag/#{liketag.tagname}",class: "btn btn-default btn-sm" %>
          <% end %>
          <br>
          <br>
          <br>
        </div>
      </div>
      <div class="col-md-8">
        <div class="clearfix">
          <% @like.each do |like| %>
            <div class="like">
              <% if like.user_id == @user.id %>
                <%= link_to like_path(like.id) do %>
                  <%= attachment_image_tag like.post, :image, :fill, 250, 250 %>
                <% end %>
              <% end %>
              <ul class="inline-meta">
                <li>
                  <%= link_to edit_like_path(like) do %>
                    <ion-icon name="menu-outline"></ion-icon>
                  <% end %>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-1"></div>
    </div>
  </div>
</section>