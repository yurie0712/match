<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <div class="masonry-wrapper-cols">
          <% @posts.each do |post| %>
            <div class="index-list">
              <div class="masonry-block">
                <div class="block block-image v1">
                  <div class="block-image">
                    <div class="view view-first">
                      <%= link_to post_path(post.id) do %>
                        <%= attachment_image_tag post, :image %>
                      <% end %>
                    </div>
                  </div>
                  <div class="block-content">
                    <!-- 投稿画像 -->
                    <%= attachment_image_tag post.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                    <p><%= render_with_post_tags(post.caption) %></p>
                    <ul class="inline-meta">
                      <li>By
                        <%= post.user.name %>
                      </li>
                      <!-- いいね -->
                      <% if user_signed_in? %>
                        <% if post.liked_by?(current_user) %>
                        <li>
                          <%= link_to post_likes_path(post), method: :delete do %>
                            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                          <% end %>
                        </li>
                        <% else %>
                        <li>
                          <%= link_to post_likes_path(post), method: :post do %>
                            <i class="fa fa-heart-o" aria-hidden="true"></i>
                          <% end %>
                        </li>
                        <% end %>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</section>