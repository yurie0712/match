<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <div class="masonry-wrapper-cols">
          <div class="clearfix">
            <% @posts.each do |post| %>
              <div class="list">
                <%= link_to post_path(post.id) do %>
                  <%= attachment_image_tag post, :image, :fill, 250, 250 %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</section>